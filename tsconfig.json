{
  "compilerOptions": {
    "target": "ES2020",                      // Allows modern JavaScript features, often useful with Node.js
    "lib": ["dom", "dom.iterable", "esnext"], // Includes support for DOM and ESNext features
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",                       // Suitable for modern ES modules
    "moduleResolution": "node",               // Node.js compatible resolution for imports
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
